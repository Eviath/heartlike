$('.articles__index').hide();
$('.articles__index').html("<%= j render partial: 'heartlike/articles/partials/article', collection: @articles, locals: {custom_class: '', column_size: "#{get_column_size}" } %>").fadeIn('slow');
$('.article__view_buttons').html("<%= j render partial: 'heartlike/articles/partials/article_view_buttons' %>")

<% if get_column_size == '6' %>
$('#articles__container').removeClass('container');
<% else %>
$('#articles__container').addClass('container');
<% end %>