<li class="article">
  <div class="article__content">
    <div class="article__meta">
      <div class="article__meta_user">
        <small class="article__meta_user-email"><%= t('heartlike.articles.article.created_by') %> <strong><%= article.user.email %></strong></small>
      </div>
      <div class="article__meta_date">
        <small class="article__meta_date-created_at"><%= t('heartlike.articles.article.created_at') %> <%= l(article.created_at, format: :long) %></small>
      </div>
      <div class="article__counters <%= guest_or_user_hearted?(article) ? 'article__hearted' : '' %>">
        <small><%= t('heartlike.articles.article.hearts_count') %> <%= article.hearts_count %></small>
      </div>
    </div>
    <h2 class="article__title"><%= article.title %></h2>
    <p class="article__body"><%= article.body %></p>
    <div class="article__meta_buttons">
      <strong class="article__meta_button article__meta_button--show"><%= link_to t('heartlike.articles.article.buttons.show'), article %></strong>
      <strong class="article__meta_button article__meta_button--edit"><%= link_to t('heartlike.articles.article.buttons.edit'), edit_article_path(article) %></strong>
      <strong class="article__meta_button article__meta_button--destroy"><%= link_to t('heartlike.articles.article.buttons.destroy'), article, method: :delete, data: { confirm: t('heartlike.actions.confirm') } %></strong>
    </div>
  </div>
</li>



